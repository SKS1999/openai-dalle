<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Profile.DashboardActivity">


    <TextView
        android:id="@+id/textname"
        style="@style/FirebaseUI.TextInputEditText.NameField"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:hint="Name"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/UserImage"
        app:layout_constraintStart_toStartOf="@+id/UserImage"
        app:layout_constraintTop_toBottomOf="@+id/UserImage"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textemail"
        style="@style/FirebaseUI.TextInputLayout.EmailField"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black_overlay"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textname"
        app:layout_constraintTop_toBottomOf="@+id/textname"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/UserImage"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/ic_baseline_perm_identity_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:civ_border_color="@color/black_overlay"
        app:civ_border_width="@dimen/_2sdp"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttondelete"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:backgroundTint="@color/black_overlay"
        android:text="Delete Account"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="@+id/logout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/logout" />

    <Button
        android:id="@+id/UpdateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/custom_success_color"
        android:clickable="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:focusable="true"
        android:onClick="@string/Select_An_Image"
        android:text="@string/update_profile"
        app:layout_constraintEnd_toEndOf="@+id/textemail"
        app:layout_constraintStart_toStartOf="@+id/textemail"
        app:layout_constraintTop_toBottomOf="@+id/textemail"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/logout"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        android:backgroundTint="#C62828"
        android:text="Log out"
        app:layout_constraintBottom_toTopOf="@+id/buttondelete"
        app:layout_constraintEnd_toEndOf="@+id/subs_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/subs_btn"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foregroundGravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu"/>

    <Button
        android:id="@+id/subs_btn"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:backgroundTint="@color/teal_700"

        android:text="Subscribe"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateProfile"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>